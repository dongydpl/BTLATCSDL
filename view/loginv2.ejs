<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đăng nhập</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    /* ==== Toàn trang ==== */
    body {
      min-height: 100vh;
      margin: 0;
      background: linear-gradient(135deg, #4CAF50, #2E7D32);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* ==== Hiệu ứng nền cái khiên ==== */
    body::before {
      content: "";
      position: absolute;
      width: 600px;
      height: 600px;
      background: url('https://upload.wikimedia.org/wikipedia/commons/e/e3/Shield_green_icon.svg') no-repeat center/contain;
      opacity: 0.07;
      animation: floatShield 12s infinite ease-in-out;
    }

    @keyframes floatShield {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      50% { transform: translateY(-30px) rotate(10deg); }
    }

    /* ==== Khung đăng nhập ==== */
    .login-container {
      position: relative;
      z-index: 2;
      max-width: 400px;
      width: 90%;
      background: rgba(255, 255, 255, 0.95);
      padding: 35px;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
      backdrop-filter: blur(8px);
      animation: fadeIn 0.8s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    h3 {
      color: #2E7D32;
      font-weight: 700;
      letter-spacing: 0.5px;
    }

    /* ==== Input ==== */
    .form-control {
      border: 2px solid #A5D6A7;
      transition: all 0.3s;
    }

    .form-control:focus {
      box-shadow: 0 0 8px rgba(76, 175, 80, 0.4);
      border-color: #43A047;
    }

    /* ==== Nút đăng nhập ==== */
    .btn-success {
      background: #43A047;
      border: none;
      transition: all 0.3s ease;
      font-weight: 600;
      letter-spacing: 0.5px;
    }

    .btn-success:hover {
      background: #388E3C;
      box-shadow: 0 0 12px rgba(67,160,71,0.5);
      transform: translateY(-2px);
    }

    .alert-danger {
      background-color: #f8d7da;
      color: #b71c1c;
      border: none;
      border-radius: 10px;
      font-weight: 500;
    }

    a {
      color: #2E7D32;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h3 class="text-center mb-4">Đăng nhập</h3>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <form action="/loginv2" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Nhập email..." required>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Mật khẩu:</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Nhập mật khẩu..." required>
      </div>

      <button type="submit" class="btn btn-success w-100 mt-2">Đăng nhập</button>
    </form>

    <div class="text-center mt-3">
      <small>Chưa có tài khoản? <a href="/register">Đăng ký</a></small>
    </div>
  </div>
</body>
</html>
